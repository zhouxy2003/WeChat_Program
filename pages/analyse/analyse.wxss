.global{
  width: 100%;
  height: 100%;
  overflow: scroll;
	/* border: 1px solid #000; */

}

.container{
  width: 100%;
  height: auto;
}

.title{
	font-size: larger;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-top: 20rpx;
	font-weight: bold;
	color: rgb(91, 103, 217);
}


.tools {
  display: flex;
  align-items: center;
  padding: 9rpx;
  margin-left: 20rpx;
}

.circle {
  padding: 0 4rpx;
}

.box {
  display: inline-block;
  align-items: center;
  width: 20rpx;
  height: 20rpx;
  padding: 2rpx;
  border-radius: 50%;
}

.red {
  background-color: #ff605c;
}

.yellow {
  background-color: #ffbd44;
}

.green {
  background-color: #00ca4e;
}

.card__content{
	width: 100%;
	height: 100%;
	margin-top: 30rpx;
	border: 1px solid #000;
}


