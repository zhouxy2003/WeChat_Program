.global{
  width: 100%;
  height: 100%;
  overflow: scroll;
	/* border: 1px solid #000; */

}
.van-overlay {
  position: relative;
  z-index: 10;
}


.container{
  width: 100%;
  height: auto;
}

.title{
	font-size: larger;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-top: 20rpx;
	font-weight: bold;
	color: rgb(91, 103, 217);
}


.tools {
  display: flex;
  align-items: center;
  padding: 9rpx;
  margin-left: 20rpx;
}

.circle {
	padding: 0 4rpx;
	font-size: x-large;
	float: left;
}

.box {
  display: inline-block;
  align-items: center;
  width: 20rpx;
  height: 20rpx;
  padding: 2rpx;
  border-radius: 50%;
}

.red {
  background-color: #ff605c;
}

.yellow {
  background-color: #ffbd44;
}

.green {
  background-color: #00ca4e;
}

.card__content{
	width: 100%;
	height: 100%;
	margin-top: 30rpx;
	border: 1px solid #000;
}


.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.block {
  width: 500rpx;
  height: 600rpx;
  border-radius: 20rpx;
  background-color: #fff;
}

.inputIcon{
	width: 40rpx;height: 40rpx;
	float: left;
	margin-left: 50rpx;
	margin-top: 18rpx;
}
.inputWord{
		width: 26%;
		height: 81rpx;
		justify-content: flex-start;
		margin-left: 2%;
		margin-top: 20rpx;
		background-color: white;
		font-size:25rpx;
		left: 10rpx;
		color:rgb(101, 101, 101);
		
}
.inputData{
	width: 70%;
	justify-content: flex-end;
	margin-right: 2%;
	margin-top: 20rpx;
	height: 80rpx;
	background-color: white;
	border-bottom: 1px solid rgb(235, 235, 235);
}
.inputCard{
	display: flex;
}


.ball {
  position: relative;
  bottom: 50rpx;
  left: calc(100% - 20rpx);
  width: 50rpx;
  height: 50rpx;
  background: rgb(80, 203, 240);
  border-radius: 50%;
  animation: ball-move8234 3s ease-in-out 1s infinite alternate;
}

.ball::after {
  position: absolute;
  content: '';
  top: 25rpx;
  right: 5rpx;
  width: 5rpx;
  height: 5rpx;
  background: rgb(255, 255, 255);
  border-radius: 50%;
}

.bar {
  width: 200rpx;
  height: 12.5rpx;
  background: #FFDAAF;
  border-radius: 30rpx;
  transform: rotate(-15deg);
  animation: up-down6123 3s ease-in-out 1s infinite alternate;
}

@keyframes up-down6123 {
  from {
    transform: rotate(-15deg);
  }

  to {
    transform: rotate(15deg);
  }
}

@keyframes ball-move8234 {
  from {
    left: calc(100% - 40rpx);
    transform: rotate(360deg);
  }

  to {
    left: calc(0% - 20rpx);
    transform: rotate(0deg);
  }
}
