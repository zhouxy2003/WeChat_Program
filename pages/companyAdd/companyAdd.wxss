.globol {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  background-color: rgb(246, 246, 246);
}

.title {
  width: 280rpx;
  height: 80rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
}

.title text {
  font-size: 30rpx;
  margin-top: 12rpx;
  margin-left: 15rpx;
}

.tip {
  width: 100%;
  margin-top: 10rpx;
}

.inputIcon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 50rpx;
  margin-top: 18rpx;
}

.inputWord {
  width: 40%;
  height: 81rpx;
  display: flex;
  justify-content: flex-start;
  background-color: white;
  font-size: 25rpx;
  left: 20rpx;
  color: rgb(101, 101, 101);
}
.inputContainer {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.inputWord text {
  margin-left: 10rpx;
  margin-top: 20rpx;
}

.inputData {
	width: 100%;
  height: 80rpx;
  background-color: white;
  border-bottom: 1px solid rgb(235, 235, 235);
}

.cal,
.region {
  width: 100%;
  float: left;
  justify-content: center;
  align-items: center;
  height: 550rpx;
  overflow: hidden;
  margin-top: 10rpx;
}

.submit {
  width: 200rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.space {
  width: 100%;
  height: 60rpx;
}
