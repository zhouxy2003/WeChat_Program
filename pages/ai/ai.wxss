/* chat.wxss */

.global {
  width: 100%;
  height: 1300rpx;
  background-color:white;
  transition: all 0.8s;
}

/* 聊天的盒子容器 */
.chatBox {
  width: 96%;
  margin-left: 2%;
  height: 1100rpx;
  overflow: scroll;
}

/* ai的对话框 */
.ai {
  width: fit-content;
  height: auto;
  overflow: hidden;
  font-size: large;
  text-align: left;
  background-color: rgb(233, 233, 233);
  border-radius: 20rpx;
  color: black;
  font-weight: bold;
  margin-bottom: 10px;
  padding: 10px;
  margin-top: 20rpx;
}

/* 用户的对话框 */
.user {
  width: fit-content;
  height: auto;
  overflow: hidden;
  font-size: large;
  text-align: left;
  background-color: rgb(88, 103, 246);
  border-radius: 10rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 10px;
  margin-left: auto;
  padding: 10px;
  border-radius: 20rpx;
}

/* icon的样式 */
.icon {
  /* font-size: 20px; */
  /* margin-right: 5px; */
  /* margin-top: 10rpx; */
}

/* ai类对话框的图标靠左 */
.aiIcon {
   display: flex;
   justify-content: flex-start;
   
}

/* user类对话框的图标靠右 */
.userIcon {
  display: flex;
  justify-content: flex-end;
}

.userInput {
  width: 80%;
  height: 100rpx;
  border-radius: 20rpx;
  word-break: break-all;
  background-color: rgb(243, 243, 246);
  /* border: 4px solid white; */
  padding: 20rpx 0;
  justify-content: flex-start;
  margin-left: 15rpx;
}


.btn-class-name {
  width: 40px;
  height: 35px;
  border: none;
  outline: none;
  cursor: pointer;
  user-select: none;
  touch-action: manipulation;
  border-radius: 50%;
  position: relative;
  transition: 0.3s;
  justify-content: flex-end;
  margin-left: 20rpx;
  margin-top: 5rpx;
}

.btn-class-name .back {
  background: rgb(0, 128, 0);
  border-radius: 50%;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.btn-class-name .front {
  background: -webkit-linear-gradient(0deg, rgba(0, 255, 0, 0.6) 20%, rgba(0, 255, 0) 50%);
  background: linear-gradient(0deg, rgba(0, 255, 0, 0.6) 20%, rgba(0, 255, 0) 50%);
  box-shadow: 0 0.5em 1em -0.4em rgba(0, 128, 0, 0.5);
  border-radius: 50%;
  position: absolute;
  border: 1px solid rgb(0, 128, 0);
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 1.2rem;
  font-weight: 600;
  font-family: inherit;
  transform: translateY(-15%);
  transition: 0.15s;
  color: rgb(0, 128, 0);
}

.btn-class-name:active .front {
  transform: translateY(0%);
  box-shadow: 0 0;
}

