/* 聊天的盒子容器 */
.chatBox {
	width: 98%;
	margin-left: 1%;
  height: 1100rpx;
  overflow: scroll;
  /* margin-top: 0rpx; */
  /* border: 1px solid #000; */
}

/* ai的对话框 */
.ai {
  width: fit-content;
  height: auto;
  overflow: hidden;
  font-size: larger;
  text-align: left;
  background-color: rgb(227, 229, 233);
  border-radius: 20rpx;
  color: black;
  font-weight: bold;
  margin-bottom: 10px;
  padding: 10px; /* 添加padding属性来增加文字和框之间的距离 */
  margin-top: 20rpx;
}

/* 用户的对话框 */
.user {
  width: fit-content;
  height: auto;
  overflow: hidden;
  font-size: larger;
  text-align: left;
  background-color: rgb(88, 103, 246);
  border-radius: 10rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 10px;
  margin-left: auto; /* 添加左边距，使其靠右对齐 */
	padding: 10px; /* 添加padding属性来增加文字和框之间的距离 */
	border-radius: 20rpx;
}

.userInput {
  width: 80%;
  height: 100rpx;
  border-radius: 10rpx;
  word-break: break-all;
  /* display: flex; */
  background-color: rgb(246, 246, 246);
  border: 4px solid white;
}
.userInput:hover{
  border: 4px solid rgb(96, 176, 74);
}
